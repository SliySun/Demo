<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sun.demo.MainActivity">

   <ViewFlipper
       android:id="@+id/flipper"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:autoStart="true"
       android:flipInterval="3000"
       android:inAnimation="@anim/translate_in"
       android:outAnimation="@anim/translate_out"
       />
   
   <com.example.sun.demo.LoveScoreView
       android:layout_width="200dp"
       android:layout_height="200dp"
       android:layout_centerInParent="true"
       app:ring_width="7dp"
       app:score="20"
       app:sub_text_String="已捐赠"
       app:sub_text_size="40"
       />


</RelativeLayout>
